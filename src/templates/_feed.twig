{% spaceless %}
    <?xml version="1.0" encoding="utf-8"?>
    <offers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1">
        {% for element in elements %}
            {% if craft.ceneoXmlFeedPro.isIncludeElementVariants(element) %}
                {% for variant in element.variants() %}
                    {% include 'ceneo-xml-feed-pro/_includes/offer' with {element: variant} %}
                {% endfor %}
            {% else %}
                {% include 'ceneo-xml-feed-pro/_includes/offer' %}
            {% endif %}
        {% endfor %}
    </offers>
{% endspaceless %}
